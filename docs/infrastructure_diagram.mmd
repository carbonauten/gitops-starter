      vpn_az["VPN Gateway"]
      k8s_az["AKS Kubernetes"]
    end

    subgraph alibaba["Alibaba Cloud (China)"]
      vpn_ali["VPN Gateway"]
      ecs_ali["Alibaba ECS"]
    end

    subgraph onprem["On-Premises Data Center"]
